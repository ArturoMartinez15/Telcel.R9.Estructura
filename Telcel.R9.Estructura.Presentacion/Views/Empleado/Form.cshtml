@model Telcel.R9.Estructura.Empleado
@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h5>Producto</h5>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="../../Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>


    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.EmpleadoId, new { @class = "hidden" })
                            @Html.TextBoxFor(model => model.EmpleadoId, new { @class = "form-control hidden " })
                            @Html.ValidationMessageFor(model => model.EmpleadoId)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Nomnre)
                            @Html.TextBoxFor(model => model.Nomnre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nomnre)
                        </div>
                    </div>

                 
                    <div class="row">

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.puesto, new { @class = "control-label" })
                            @if (Model.puesto.Puestos == null)
                            {

                                @Html.DropDownListFor(model => model.puesto.PuestoId, new SelectList(string.Empty, "Value", "Text"), "Selecciona un Puesto", htmlAttributes: new { id = "PuestoId", @class = "form-control" })

                            }
                            else
                            {
                                @Html.DropDownListFor(model => model.puesto.PuestoId, new SelectList(Model.puesto.Puestos, "Puesto", "Nombre"), "Selecciona un Puesto", htmlAttributes: new { id = "Puesto", @classs = "form-control" })
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.departamento, new { @class = "control-label" })
                            @if (Model.departamento.Departamentos == null)
                            {

                                @Html.DropDownListFor(model => model.departamento.DepartamentoId, new SelectList(string.Empty, "Value", "Text"), "Selecciona un Departamento", htmlAttributes: new { id = "DepartamentoId", @class = "form-control" })

                            }
                            else
                            {

                                @Html.DropDownListFor(model => model.departamento.DepartamentoId, new SelectList(Model.departamento.Departamentos, "DepartamentoId", "Nombre"), "Selecciona un Departamento", htmlAttributes: new { id = "DepartamentoId", @classs = "form-control" })
                            }

                        </div>
                    </div>


                  


                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="submit" id="btnSubmit" value="Guardar" class="btn btn-success" />
                            @Html.ActionLink("Regresar", "GetAll", "Empleado", htmlAttributes: new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
